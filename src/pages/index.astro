---
import Badge from "../components/Badge.astro";
import HeadlineContainer from "../components/Main/HeadlineContainer.astro";
import Proyect from "../components/Main/Proyect/Proyect.astro";
import SectionContainer from "../components/Main/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Code from "../components/icons/Code.astro";
import Person from "../components/icons/Person.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
    title="Portfolio Daniel Rodado - Desarrollador Web Full Stack Java"
    description="Full Stack Developer especializado en Java, Spring Boot, JavaScript y Vue.js. Con experiencia en proyectos integrales, desarrollo de servicios RESTful y gestión de bases de datos PostgreSQL. Formado en metodologías ágiles como SCRUM, con capacidad para adaptarse rápidamente a nuevas tecnologías y compromiso con soluciones de alta calidad."
>
    <SectionContainer className="flex flex-col gap-y-4 py-10 md:py-32">
        <div class="flex items-center gap-x-4">
            <img
                class="w-20 rounded-full"
                src="/images/img-personal.webp"
                alt="Daniel Rodado webp"
            />
            <a
                href="https://www.linkedin.com/in/daniel-rodado-b24432210/"
                target="_blank"
                rel="noopener noreferrer"
            >
                <Badge>Disponible para trabajar</Badge>
            </a>
        </div>
        <h2 class="text-white text-3xl sm:text-4xl font-bold md:text-5xl">
            Hey, soy Daniel
        </h2>
        <h3
            class="text-base text-gray-300 text-balance [&>strong]:text-yellow-200 [&>strong]:font-semibold sm:text-lg md:text-xl"
        >
            Soy un <strong>Desarrollador Web Full Stack</strong>. He trabajado
            en proyectos completos,
            <span class="text-gray-400/90"
                >desde el diseño hasta la imprementación</span
            >, implementando servicios RESTful y gestionando bases de datos con
            PostgreSQL. Formado en <span class="text-gray-400/90"
                >metodologías ágiles como SCRUM</span
            >, colaboro eficientemente en equipos multidisciplinarios. Me adapto
            rápidamente a
            <span class="text-gray-400/90">nuevas tecnologías</span> y estoy comprometido
            con la
            <span class="text-gray-400/90"
                >entrega de soluciones de alta calidad</span
            >.
        </h3>
        <div class="flex gap-4">
            <SocialPill
                href="https://www.linkedin.com/in/daniel-rodado"
                socialNetwork="LinkedIn"
            >
                <LinkedInIcon />
            </SocialPill>
            <SocialPill
                href="https://www.github.com/DanielRodado/"
                socialNetwork="GitHub"
            >
                <GitHubIcon />
            </SocialPill>
        </div>
        <div class="flex items-center gap-2 opacity-90 text-white">
            <svg
                class="size-4 md:size-6"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                    d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path><path
                    d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"
                ></path></svg
            >
            <p class="text-sm md:text-base">Barranquilla, Colombia 🇨🇴</p>
        </div>
    </SectionContainer>
    <SectionContainer id="proyectos">
        <HeadlineContainer>
            <Code slot="svg" />
            Proyectos
        </HeadlineContainer>
        <ul class="flex flex-col items-center gap-4 md:gap-8 mt-16">
            <Proyect />
        </ul>
    </SectionContainer>
    <SectionContainer id="sobre-mi" className="mt-24">
        <HeadlineContainer>
            <Person slot="svg" /> 
            Sobre mí
        </HeadlineContainer>
    </SectionContainer>
</Layout>

