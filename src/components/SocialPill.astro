---
interface Props {
    href: string;
    socialNetwork: string;
}

const { href, socialNetwork } = Astro.props;
---

<a
    href={href}
    role="button"
    target="_blank"
    rel="noopener noreferrer nofollow"
    class="flex items-center gap-2 text-gray-900 bg-white border border-gray-300 transition ease-in focus:outline-none hover:bg-gray-200 focus:ring-4 focus:ring-gray-200 font-medium rounded-full text-sm px-3 py-1 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700 md:text-base"
>
    <slot />
    {socialNetwork}
</a>
