---
import proyects from "../../../data/proyects.json";
import ProyectBtn from "./ProyectBtn.astro";
import TechnologyPill from "./TechnologyPill.astro";
---

{
    proyects.map((proyect) => (
        <li>
            <article class="w-full md:max-w-lg">
                <h3 class="text-2xl font-bold text-gray-100">
                    {proyect.proyectName} - {proyect.typeProyect}
                </h3>
                <div class="flex flex-col mt-2">
                    <p class="text-gray-400 mt-2">{proyect.description}</p>
                    <ul class="flex flex-row flex-wrap my-2 gap-2">
                        {proyect.technologies.map((technology) => (
                            <TechnologyPill
                                technology={technology.name}
                                className={technology.class}
                            />
                        ))}
                    </ul>
                    <div class="flex justify-start mt-4 gap-x-4">
                        <ProyectBtn href={proyect.githubRepository} />
                        {proyect.deploy ? (
                            <ProyectBtn href={proyect.linkToSite} />
                        ) : (
                            ""
                        )}
                    </div>
                </div>
            </article>
        </li>
    ))
}
