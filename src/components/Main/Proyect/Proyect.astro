---
import proyects from "../../../data/proyects.ts";
import ProyectBtn from "./ProyectBtn.astro";
import TechnologyPill from "./TechnologyPill.astro";
---

{
    proyects.map((proyect) => (
        <li>
            <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                <div class="w-full md:w-1/2">
                    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                        <img src={proyect.image} alt={proyect.proyectName} class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" />
                    </div>
                </div>
                <div class="w-full md:w-1/2 md:max-w-lg">
                    <h3 class="text-lg font-bold text-gray-100 sm:text-xl md:text-2xl">
                        {proyect.proyectName} - {proyect.typeProyect}
                    </h3>
                    <div class="flex flex-col mt-2">
                        <p class="text-gray-400 text-sm mt-2 md:text-base">{proyect.description}</p>
                        <ul class="flex flex-row flex-wrap mt-2 gap-2">
                            {proyect.technologies.map((technology) => (
                                <TechnologyPill
                                    technology={technology.name}
                                    className={technology.class}
                                />
                            ))}
                        </ul>
                        <div class="flex justify-start mt-4 gap-x-4">
                            <ProyectBtn href={proyect.githubRepository} />
                            {proyect.deploy ? (
                                <ProyectBtn href={proyect.linkToSite} />
                            ) : (
                                ""
                            )}
                        </div>
                    </div>
                </div>
            </article>
        </li>
    ))
}
